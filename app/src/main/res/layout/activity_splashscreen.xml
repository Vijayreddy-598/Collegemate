        android:layout_height="0sp"
        android:layout_weight="1"
        android:src="@drawable/splashlogo"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"/>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
